<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.warehousemanager">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WarehouseManager"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.ChartActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SendMailActivity"
            android:exported="false" />
        <activity
            android:name=".activities.EditSuppliesActivity"
            android:exported="true" />
        <activity
            android:name=".activities.SuppliesActivity"
            android:exported="false" />
        <activity
            android:name=".activities.EditStorageActivity"
            android:exported="false" />
        <activity
            android:name=".activities.EditDetailGoodsReceiptActivity"
            android:exported="false" />
        <activity
            android:name=".activities.StorageActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AddDetailGoodsReceiptActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AddGoodsReceiptActivity"
            android:exported="false" />
        <activity
            android:name=".activities.EditGoodsReceiptActivity"
            android:exported="false" />
        <activity
            android:name=".activities.DetailGoodsReceiptActivity"
            android:exported="false" />
        <activity
            android:name=".activities.GoodsReceiptActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>